<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Ask.Card"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/delete_user_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:src="@drawable/ic_action_content_discard"
        android:background="@drawable/transparent_click_feedback_background"
        android:layout_gravity="right"/>

    <TextView
        style="@style/Ask.Text.Large"
        android:id="@+id/word_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>