<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/determinateBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:progress="25"

        android:progressTint="#07dddd"/>


    <TextView
        android:id="@+id/imageView20"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#0a1c4a"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView21"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Then select it as your default keyboard."
        />



    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/determinateBar"
        app:srcCompat="@drawable/ears_icon"/>

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="219dp"
        android:layout_height="228dp"
        app:srcCompat="@drawable/default_keyb_2_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView20"/>


    <ScrollView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView22">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:textSize="19sp"

        android:text="The EARS keyboard was successfully installed.\n\nYou now need to select it as your default keyboard.\n\nYou'll see a slightly different keyboard than you're used to, but it still has all the same functions as your current one."


        />

    </ScrollView>

    <ImageView
        android:id="@+id/imageView25"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/select_keyboard"
        />

</android.support.constraint.ConstraintLayout>