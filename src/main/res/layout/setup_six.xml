<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/determinateBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:progress="80"

        android:progressTint="#07dddd"/>


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="20dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/determinateBar"
        app:srcCompat="@drawable/ears_icon"/>


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="179dp"
        android:layout_height="181dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"

        android:layout_marginTop="32dp"
        android:src="@drawable/selfie_step_5_1"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboveImage"
        />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        app:layout_constraintTop_toBottomOf="@+id/profile_image">


        <ImageView
            android:id="@+id/imageView39"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="32dp"

            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView40"
            app:layout_constraintHorizontal_bias="0.6"

            app:layout_constraintLeft_toLeftOf="@id/scrollView2"
            app:layout_constraintRight_toRightOf="@id/scrollView2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/facial_expression"/>

    </ScrollView>

    <TextView
        android:id="@+id/aboveImage"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"

        android:layout_marginStart="8dp"
        android:text="         One last thing"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView14"/>


    <ImageView
        android:id="@+id/imageView40"
        android:layout_width="0dp"
        android:scaleType="fitXY"
        android:layout_height="57dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/step_six_button"/>




</android.support.constraint.ConstraintLayout>
